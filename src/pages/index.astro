---
import MainLayout from "../layouts/MainLayout.astro";

const collections = [
  { id: 'kit-acne', name: 'Kit Anti-Acné', description: 'Tratamiento completo para piel con acné' },
  { id: 'kit-antiedad', name: 'Kit Anti-Edad', description: 'Rutina completa para combatir el envejecimiento' },
  { id: 'kit-pigmentacion', name: 'Kit Pigmentación', description: 'Solución para manchas y tono desigual' }
];

const reviews = [
  { id: 1, name: "María G.", role: "Cliente frecuente", rating: 5, text: "Desde que uso la rutina completa noto la piel mucho más luminosa y sin tanta tirantez." },
  { id: 2, name: "Lucía P.", role: "Piel sensible", rating: 4, text: "Por primera vez encontré productos que no me irritan. Me encanta la textura de los sérums." },
  { id: 3, name: "Camila R.", role: "Nueva en skincare", rating: 5, text: "La web me ayudó a entender cómo armar mi ritual. Todo se siente simple y aplicable al día a día." }
];

const instagramPosts = [
  { id: 1, likes: 234, video: "/Feed/Feed_1.mp4" },
  { id: 2, likes: 189, video: "/Feed/Feed_2.mp4" },
  { id: 3, likes: 412, video: "/Feed/Feed_3.mp4" },
  { id: 4, likes: 298, video: "/Feed/Feed_4.mp4" }
];

const bestSellers = [
  { name: "Protección Solar Clear Soft SPF 50", subtitle: "Prevención", img: "/Sin_Fondo/CLEAR-SOFT-SPF-50-M-PREVENT-sin-fondo.webp" },
  { name: "Acn.e Bio", subtitle: "Control de acné", img: "/Sin_Fondo/ACNE-BIO-TREAT-GEL-sin-fondo.webp" },
  { name: "Suero Reparador Definitivo de Arrugas", subtitle: "Antienvejecimiento", img: "/Sin_Fondo/serum-reparador-de-arrugas-definitivo-sin-fondo.webp" },
  { name: "Hidratante Ultra para Piel Grasa", subtitle: "Hidratación balanceada", img: "/Sin_Fondo/ULTRA-MOISTURIZER-FOR-OILY-SKIN-sin-fondo.webp" }
];
---

<MainLayout
  title="Alvit Eclat - Cremas Antiedad, Protección Solar y Cuidado Facial"
  description="Descubre nuestra selección de productos de cuidado de la piel. Antiedad, limpiadores, protección solar, tratamientos para acné y más."
>

<button id="btnUp" class="fixed bottom-5 right-5 z-[9999] bg-black text-white p-3 rounded-full shadow-lg hover:bg-zinc-800 transition-all">↑</button>

<section class="w-full relative">
  <div class="hero-img w-full h-[400px] sm:h-[500px] md:h-[600px] lg:h-[650px] bg-no-repeat bg-center">
    <div class="absolute w-full h-full bg-black/20">
      <div class="relative w-full h-full flex flex-col justify-center items-start px-4 sm:px-6 md:px-12 lg:px-16">
        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl text-white text-glow mb-4 md:mb-8 leading-tight pt-40 sm:pt-52 md:pt-64 lg:pt-72 xl:pt-80">
          La dermocosmética avanzada <br class="hidden sm:block"> es nuestra filosofía
        </h1>
        <a href="/products" class="bg-black text-white px-4 sm:px-5 md:px-6 py-2 sm:py-3 text-sm sm:text-base uppercase rounded-lg hover:bg-pink-600 transition-colors duration-300">
          Descubrí más
        </a>
      </div>
    </div>
  </div>
</section>

<section class="w-full py-12 md:py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-2xl sm:text-3xl md:text-4xl text-black text-glow mb-8 md:mb-12 uppercase text-center font-bold">Más Vendido</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
      {bestSellers.map(product => (
        <div class="flex flex-col items-center">
          <div class="w-full max-w-xs aspect-square bg-gradient-to-r from-pink-600 to-pink-300 rounded-tr-[130px] rounded-bl-[130px] relative mb-28">
            <img src={product.img} alt={product.name} class="absolute left-1/2 -translate-x-1/2 bottom-0 translate-y-1/3 object-contain drop-shadow-lg" />
          </div>
          <h3 class="text-lg text-center font-medium mt-7">{product.name}</h3>
          <p class="text-sm text-gray-600 text-center mt-2">{product.subtitle}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<section class="w-full py-12 md:py-16 px-4 sm:px-6 lg:px-8 bg-purple-50">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl text-center font-bold mb-4">Nuestros Kits Terapéuticos</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {collections.map(kit => (
        <div class="bg-white rounded-xl p-6 shadow-lg text-center">
          <h3 class="text-xl font-bold mb-3">{kit.name}</h3>
          <p class="text-gray-600 mb-6">{kit.description}</p>
          <a href={`/kits#${kit.id}`} class="inline-block bg-pink-600 text-white px-6 py-3 rounded-lg hover:bg-pink-800 transition-colors">
            Ver kit completo
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<section class="w-full py-12 md:py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl text-center font-bold mb-8">Síguenos en Instagram</h2>
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
      {instagramPosts.map(post => (
        <a href="https://www.instagram.com/dermalosophyalviteclat/" target="_blank" class="relative aspect-square overflow-hidden rounded-lg">
          <video src={post.video} loop muted playsinline class="w-full h-full object-cover"></video>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
.hero-img{background-image:url('/Publicidad/publicidad-celular.webp');background-size:cover;background-position:center}
@media(min-width:768px){.hero-img{background-image:url('/Publicidad/publicidad-compu.webp')}}
.text-glow{text-shadow:2px 2px 4px rgba(0,0,0,.3)}
html{scroll-behavior:smooth}
</style>

<script>
const btnUp=document.getElementById("btnUp");
window.addEventListener("scroll",()=>{window.scrollY>300?btnUp.classList.remove("opacity-0","pointer-events-none"):btnUp.classList.add("opacity-0","pointer-events-none")});
btnUp.addEventListener("click",()=>window.scrollTo({top:0,behavior:"smooth"}));
</script>

</MainLayout>
