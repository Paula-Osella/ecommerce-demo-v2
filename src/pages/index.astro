<style>
  .hero-img {
    /* Imagen vertical para celular */
    background-image: url('/Publicidad/publicidad-celular.webp');
    background-size: cover;
    background-position: center;
  }

  @media (min-width: 768px) {
    .hero-img {
      /* Imagen horizontal para desktop */
      background-image: url('/Publicidad/publicidad-compu.webp');
      background-size: cover;
      background-position: center;
    }
  }

  .text-glow {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  /* Animación suave para hover en imágenes */
  img {
    transition: transform 0.3s ease;
  }

  /* Scroll suave */
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  // Auto-play videos cuando entran en viewport
  document.addEventListener('DOMContentLoaded', () => {
    const videos = document.querySelectorAll('video');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.play();
        } else {
          entry.target.pause();
        }
      });
    }, { threshold: 0.5 });
    
    videos.forEach(video => observer.observe(video));
  });

  //Boton para subir

  const btnUp = document.getElementById("btnUp");

  // Mostrar/ocultar botón al scrollear
  window.addEventListener("scroll", () => {
    if (window.scrollY > 300) {
      btnUp.classList.remove("opacity-0", "pointer-events-none");
    } else {
      btnUp.classList.add("opacity-0", "pointer-events-none");
    }
  });

  // Scroll suave hacia arriba
  btnUp.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
</script>
