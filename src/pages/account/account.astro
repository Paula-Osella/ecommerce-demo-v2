---
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="Mi cuenta | Demo e-commerce">
  {/* Menos padding y casi sin espacio antes del footer */}
  <section class="py-6 md:py-8 mb-[-1.5rem] md:mb-[-2rem] bg-slate-200">
    <div class="max-w-xl mx-auto">
      {/* Título + texto, sin tarjeta */}
      <div class="text-center space-y-2 mb-6">
        <h1 class="text-2xl md:text-3xl font-semibold">Login</h1>
      </div>

      {/* Formulario simple */}
      <form class="space-y-4 max-w-md mx-auto">
        <div class="space-y-1">
          <label class="text-xs font-medium text-zinc-700" for="email">
            Email
          </label>
          <input
            id="email"
            type="email"
            class="w-full px-4 py-3 border border-zinc-200 rounded-md text-sm focus:outline-none focus:border-pink-400"
            placeholder="tuemail@ejemplo.com"
            required
          />
        </div>

        <div class="space-y-1">
          <label class="text-xs font-medium text-zinc-700" for="password">
            Password
          </label>
          <input
            id="password"
            type="password"
            class="w-full px-4 py-3 border border-zinc-200 rounded-md text-sm focus:outline-none focus:border-pink-400"
            placeholder="••••••••"
            required
          />
        </div>

        {/* Botón redondo estilo resto del sitio */}
        <button
          type="submit"
          class="w-full mt-2 px-4 py-3 rounded-full bg-zinc-900 text-white text-sm md:text-base font-medium tracking-wide hover:bg-pink-700 transition-colors"
        >
          INICIAR SESIÓN
        </button>
      </form>

      {/* Links secundarios */}
      <div class="text-center mt-4 space-y-1">
        <a
          href="#"
          class="text-xs text-pink-600 hover:text-pink-700 font-medium"
        >
          ¿Olvidaste tu contraseña?
        </a>

        <p class="text-xs text-zinc-500">
          ¿No tenés una cuenta?
          <a href="/register" class="text-pink-600 hover:text-pink-700 font-medium">
            &nbsp;Crear una cuenta
          </a>
        </p>
      </div>
    </div>
  </section>
</MainLayout>
