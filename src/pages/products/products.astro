<MainLayout title="Todos los productos | Demo e-commerce">
  <!-- Toast notification -->
  <div id="cart-toast" class="fixed top-4 right-4 z-50 translate-x-[120%] transition-transform duration-300">
    <div class="bg-zinc-900 text-white px-6 py-3 rounded-full shadow-lg flex items-center gap-3">
      <span class="text-lg">‚úì</span>
      <span class="text-sm">Producto agregado al carrito</span>
    </div>
  </div>

  <!-- Modal de vista r√°pida -->
  <div id="quick-view-modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 backdrop-blur-sm">
    <div class="bg-white rounded-3xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto p-6 md:p-8 relative">
      <button id="close-modal" class="absolute top-4 right-4 text-2xl text-zinc-400 hover:text-zinc-900 transition-colors">
        √ó
      </button>
      <div id="modal-content"></div>
    </div>
  </div>

  {/* HERO TODOS LOS PRODUCTOS */}
  <section class="max-w-4xl mx-auto pt-16 pb-10 text-center px-4">
    <p class="text-[11px] uppercase tracking-[0.18em] text-zinc-500 mb-4">
      Todo ¬∑ Limpieza ¬∑ Nutrici√≥n ¬∑ Juventud
    </p>

    <h1 class="text-3xl md:text-4xl font-semibold mb-4">
      Todos los productos
    </h1>

    <p class="text-sm md:text-base text-zinc-600 max-w-2xl mx-auto">
      Seleccionados con amor, estos esenciales son el secreto de tu ritual de belleza diario.
    </p>
  </section>

  {/* TIRA DE 3 IM√ÅGENES */}
  <section class="mb-16 px-4">
    <div class="grid gap-3 md:grid-cols-3">
      {Array.from({ length: 3 }).map((_, index) => (
        <div class="aspect-[4/5] overflow-hidden bg-zinc-100 rounded-2xl">
          <img
            src="/Looks/Looks_4.jpg"
            alt="Retrato de producto de belleza"
            loading={index === 0 ? "eager" : "lazy"}
            class="h-full w-full object-cover hover:scale-105 transition-transform duration-500"
          />
        </div>
      ))}
    </div>
  </section>

  {/* BARRA DE B√öSQUEDA Y ORDENAMIENTO */}
  <section class="mb-8 px-4">
    <div class="max-w-4xl mx-auto flex flex-col md:flex-row gap-4">
      <div class="flex-1 relative">
        <input
          type="text"
          id="search-input"
          placeholder="Buscar productos..."
          class="w-full px-4 py-2 pl-10 rounded-full border border-zinc-200 focus:border-pink-300 focus:outline-none focus:ring-2 focus:ring-pink-100 text-sm"
        />
        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-zinc-400">üîç</span>
      </div>
      <select
        id="sort-select"
        class="px-4 py-2 rounded-full border border-zinc-200 focus:border-pink-300 focus:outline-none text-sm bg-white"
      >
        <option value="default">Ordenar por</option>
        <option value="price-asc">Precio: menor a mayor</option>
        <option value="price-desc">Precio: mayor a menor</option>
        <option value="name-asc">Nombre: A-Z</option>
        <option value="rating-desc">Mejor valorados</option>
      </select>
    </div>
  </section>

  {/* FILTROS */}
  <section class="mb-10 px-4">
    <div class="overflow-x-auto">
      <div class="flex items-center justify-center gap-3 text-xs md:text-sm min-w-max px-4">
        {categories.map((cat, index) => (
          <button
            type="button"
            data-filter={cat.id}
            class={`filter-btn px-4 py-2 rounded-full border transition-all duration-300 ${
              index === 0 ? 'border-zinc-900 opacity-100' : 'border-zinc-200 opacity-60'
            }`}
            aria-pressed={index === 0 ? "true" : "false"}
          >
            {cat.label} ({cat.count})
          </button>
        ))}
      </div>
    </div>
  </section>

  {/* GRID DE TODOS LOS PRODUCTOS */}
  <section class="mb-24 px-4">
    <div class="flex items-baseline justify-between gap-4 mb-6">
      <h2 class="text-lg md:text-xl font-semibold">
        Todos los productos
      </h2>
      <p id="product-count" class="text-[11px] md:text-xs text-zinc-500">
        {featuredProducts.length} productos encontrados
      </p>
    </div>

    <div id="products-grid" class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      {featuredProducts.map((product) => (
        <article
          data-product-id={product.id}
          data-product-category={product.category.toLowerCase()}
          data-product-name={product.name.toLowerCase()}
          data-product-price={product.price}
          data-product-rating={product.rating}
          class="product-card rounded-3xl border border-zinc-200 bg-white p-4 flex flex-col gap-3 transition-all duration-300 opacity-100"
          style="transform: scale(1);"
        >
          <div class="relative">
            {product.badge && (
              <span class="absolute top-2 left-2 z-10 bg-pink-700 text-white text-[10px] px-3 py-1 rounded-full font-medium">
                {product.badge}
              </span>
            )}
            <div class="w-full aspect-[4/5] rounded-2xl overflow-hidden bg-pink-50 mb-2 group cursor-pointer">
              <img
                src={product.image}
                alt={product.name}
                class="h-full w-full object-cover group-hover:scale-110 transition-transform duration-500"
                loading="lazy"
              />
            </div>
          </div>

          <div class="space-y-1 flex-1">
            <div class="flex items-center justify-between">
              <p class="text-[11px] uppercase tracking-[0.16em] text-zinc-500">
                {product.category}
              </p>
              <div class="flex items-center gap-1">
                <span class="text-yellow-500 text-sm">‚òÖ</span>
                <span class="text-[11px] text-zinc-600">{product.rating}</span>
                <span class="text-[11px] text-zinc-400">({product.reviews})</span>
              </div>
            </div>
            <h3 class="text-sm font-medium">
              {product.name}
            </h3>
            <p class="text-xs text-zinc-500">
              {product.description}
            </p>
            {product.stock < 10 && (
              <p class="text-[11px] text-pink-700 font-medium">
                ¬°Solo quedan {product.stock} unidades!
              </p>
            )}
          </div>

          <div class="space-y-2">
            <button
              class="quick-view-btn w-full text-[11px] py-2 rounded-full border border-zinc-300 text-zinc-700 hover:border-zinc-900 hover:bg-zinc-50 transition-colors"
              data-product-id={product.id}
            >
              Vista r√°pida
            </button>
            <div class="flex items-center justify-between gap-2">
              <span class="text-sm font-semibold text-pink-700">
                ${product.price.toLocaleString('es-AR')}
              </span>
              <button
                class="add-to-cart-btn text-[11px] px-4 py-2 rounded-full bg-zinc-900 text-zinc-50 hover:bg-pink-700 transition-all duration-300 hover:scale-105 active:scale-95"
                data-product-id={product.id}
                data-product-name={product.name}
                data-product-price={product.price}
              >
                Agregar al carrito
              </button>
            </div>
          </div>
        </article>
      ))}
    </div>

    <div id="no-results" class="hidden text-center py-16">
      <p class="text-xl text-zinc-400 mb-2">üòî</p>
      <p class="text-zinc-600">No se encontraron productos</p>
    </div>
  </section>

  {/* BLOQUES DE VALORES */}
  <section class="border-t border-zinc-200 py-10 md:py-14 px-4">
    <div class="max-w-6xl mx-auto grid gap-8 md:grid-cols-4">
      <div class="space-y-4">
        <div class="flex items-center gap-2">
          <span class="text-2xl">‚úì</span>
        </div>
        <div class="h-[2px] w-12 bg-zinc-900 mb-1"></div>
        <h3 class="text-sm md:text-base tracking-[0.14em] uppercase text-zinc-900 font-semibold">
          Seguridad
        </h3>
        <p class="text-[13px] md:text-sm text-zinc-600 leading-relaxed">
          Nuestros productos siguen altos est√°ndares de seguridad para que tu rutina sea tan
          tranquila como efectiva.
        </p>
      </div>

      <div class="space-y-4">
        <div class="flex items-center gap-2">
          <span class="text-2xl">¬∑</span>
        </div>
        <div class="h-[2px] w-12 bg-zinc-900 mb-1"></div>
        <h3 class="text-sm md:text-base tracking-[0.14em] uppercase text-zinc-900 font-semibold">
          Minimalismo
        </h3>
        <p class="text-[13px] md:text-sm text-zinc-600 leading-relaxed">
          Creemos que menos es m√°s: f√≥rmulas precisas y una rutina simple que funciona sin
          complicarte.
        </p>
      </div>

      <div class="space-y-4">
        <div class="flex items-center gap-2">
          <span class="text-2xl">+</span>
        </div>
        <div class="h-[2px] w-12 bg-zinc-900 mb-1"></div>
        <h3 class="text-sm md:text-base tracking-[0.14em] uppercase text-zinc-900 font-semibold">
          Equilibrio
        </h3>
        <p class="text-[13px] md:text-sm text-zinc-600 leading-relaxed">
          Buscamos el equilibrio perfecto entre cuidado de la piel, resultados visibles y
          placer al usar cada producto.
        </p>
      </div>

      <div class="space-y-4">
        <div class="flex items-center gap-2">
          <span class="text-2xl">‚ò∫</span>
        </div>
        <div class="h-[2px] w-12 bg-zinc-900 mb-1"></div>
        <h3 class="text-sm md:text-base tracking-[0.14em] uppercase text-zinc-900 font-semibold">
          Optimismo
        </h3>
        <p class="text-[13px] md:text-sm text-zinc-600 leading-relaxed">
          Celebramos tu piel real y cada peque√±o ritual que te recuerda que cuidarte tambi√©n
          puede ser un momento de disfrute.
        </p>
      </div>
    </div>
  </section>

  <script define:vars={{ featuredProducts }}>
    if (typeof window !== "undefined") {
      const filterButtons = document.querySelectorAll(".filter-btn");
      const productCards = document.querySelectorAll(".product-card");
      const searchInput = document.getElementById("search-input");
      const sortSelect = document.getElementById("sort-select");
      const productCount = document.getElementById("product-count");
      const noResults = document.getElementById("no-results");
      const productsGrid = document.getElementById("products-grid");
      const addToCartBtns = document.querySelectorAll(".add-to-cart-btn");
      const quickViewBtns = document.querySelectorAll(".quick-view-btn");
      const modal = document.getElementById("quick-view-modal");
      const closeModal = document.getElementById("close-modal");
      const modalContent = document.getElementById("modal-content");
      const cartToast = document.getElementById("cart-toast");

      let currentFilter = "all";
      let currentSearch = "";
      let currentSort = "default";

      // Cargar filtro guardado
      const savedFilter = localStorage.getItem("activeFilter") || "all";
      currentFilter = savedFilter;

      // Funci√≥n para mostrar toast
      function showToast() {
        cartToast.style.transform = "translateX(0)";
        setTimeout(() => {
          cartToast.style.transform = "translateX(120%)";
        }, 2000);
      }

      // Funci√≥n para agregar al carrito
      addToCartBtns.forEach((btn) => {
        btn.addEventListener("click", (e) => {
          e.preventDefault();
          const productId = btn.dataset.productId;
          const productName = btn.dataset.productName;
          const productPrice = btn.dataset.productPrice;

          // Animaci√≥n del bot√≥n
          btn.style.transform = "scale(0.9)";
          setTimeout(() => {
            btn.style.transform = "scale(1)";
          }, 100);

          // Guardar en localStorage (simulaci√≥n de carrito)
          let cart = JSON.parse(localStorage.getItem("cart") || "[]");
          const existingItem = cart.find((item) => item.id === productId);
          if (existingItem) {
            existingItem.quantity += 1;
          } else {
            cart.push({
              id: productId,
              name: productName,
              price: productPrice,
              quantity: 1,
            });
          }
          localStorage.setItem("cart", JSON.stringify(cart));

          showToast();
        });
      });

      // Modal de vista r√°pida
      quickViewBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
          const productId = btn.dataset.productId;
          const product = featuredProducts.find((p) => p.id == productId);

          modalContent.innerHTML = `
            <div class="space-y-6">
              ${product.badge ? `<span class="inline-block bg-pink-700 text-white text-xs px-4 py-1 rounded-full">${product.badge}</span>` : ''}
              <div class="aspect-[4/3] rounded-2xl overflow-hidden bg-pink-50">
                <img src="${product.image}" alt="${product.name}" class="w-full h-full object-cover" />
              </div>
              <div>
                <p class="text-[11px] uppercase tracking-[0.16em] text-zinc-500 mb-2">${product.category}</p>
                <h2 class="text-2xl font-semibold mb-3">${product.name}</h2>
                <div class="flex items-center gap-2 mb-3">
                  <span class="text-yellow-500">‚òÖ</span>
                  <span class="text-sm">${product.rating}</span>
                  <span class="text-sm text-zinc-400">(${product.reviews} rese√±as)</span>
                </div>
                <p class="text-zinc-600 mb-4">${product.description}</p>
                <div class="bg-zinc-50 rounded-xl p-4 mb-4">
                  <p class="text-xs font-semibold mb-2 uppercase tracking-wider">Beneficios clave:</p>
                  <ul class="space-y-1">
                    ${product.benefits.map(b => `<li class="text-sm text-zinc-600 flex items-center gap-2"><span class="text-pink-700">‚Ä¢</span>${b}</li>`).join('')}
                  </ul>
                </div>
                ${product.stock < 10 ? `<p class="text-sm text-pink-700 font-medium mb-4">¬°Solo quedan ${product.stock} unidades!</p>` : ''}
                <div class="flex items-center justify-between pt-4 border-t">
                  <span class="text-2xl font-bold text-pink-700">$${product.price.toLocaleString('es-AR')}</span>
                  <button class="modal-add-cart px-6 py-3 rounded-full bg-zinc-900 text-white hover:bg-pink-700 transition-colors" data-product-id="${product.id}">
                    Agregar al carrito
                  </button>
                </div>
              </div>
            </div>
          `;

          modal.classList.remove("hidden");
          modal.classList.add("flex");

          // Bot√≥n agregar en modal
          const modalAddBtn = modalContent.querySelector(".modal-add-cart");
          modalAddBtn.addEventListener("click", () => {
            let cart = JSON.parse(localStorage.getItem("cart") || "[]");
            const existingItem = cart.find((item) => item.id === product.id.toString());
            if (existingItem) {
              existingItem.quantity += 1;
            } else {
              cart.push({
                id: product.id.toString(),
                name: product.name,
                price: product.price,
                quantity: 1,
              });
            }
            localStorage.setItem("cart", JSON.stringify(cart));
            showToast();
            modal.classList.add("hidden");
            modal.classList.remove("flex");
          });
        });
      });

      closeModal.addEventListener("click", () => {
        modal.classList.add("hidden");
        modal.classList.remove("flex");
      });

      modal.addEventListener("click", (e) => {
        if (e.target === modal) {
          modal.classList.add("hidden");
          modal.classList.remove("flex");
        }
      });

      // Funci√≥n para filtrar y mostrar productos
      function updateProducts() {
        let visibleCount = 0;
        const cardsArray = Array.from(productCards);

        // Aplicar ordenamiento
        if (currentSort !== "default") {
          const gridParent = productsGrid;
          const sortedCards = cardsArray.sort((a, b) => {
            if (currentSort === "price-asc") {
              return parseInt(a.dataset.productPrice) - parseInt(b.dataset.productPrice);
            } else if (currentSort === "price-desc") {
              return parseInt(b.dataset.productPrice) - parseInt(a.dataset.productPrice);
            } else if (currentSort === "name-asc") {
              return a.dataset.productName.localeCompare(b.dataset.productName);
            } else if (currentSort === "rating-desc") {
              return parseFloat(b.dataset.productRating) - parseFloat(a.dataset.productRating);
            }
            return 0;
          });
          sortedCards.forEach((card) => gridParent.appendChild(card));
        }

        productCards.forEach((card, index) => {
          const category = card.dataset.productCategory;
          const name = card.dataset.productName;
          const matchesFilter = currentFilter === "all" || category === currentFilter;
          const matchesSearch = name.includes(currentSearch.toLowerCase());

          if (matchesFilter && matchesSearch) {
            card.style.opacity = "0";
            card.style.transform = "scale(0.9)";
            card.classList.remove("hidden");
            
            setTimeout(() => {
              card.style.opacity = "1";
              card.style.transform = "scale(1)";
            }, index * 50);
            
            visibleCount++;
          } else {
            card.style.opacity = "0";
            card.style.transform = "scale(0.9)";
            setTimeout(() => {
              card.classList.add("hidden");
            }, 300);
          }
        });

        productCount.textContent = `${visibleCount} producto${visibleCount !== 1 ? 's' : ''} encontrado${visibleCount !== 1 ? 's' : ''}`;

        if (visibleCount === 0) {
          noResults.classList.remove("hidden");
        } else {
          noResults.classList.add("hidden");
        }
      }

      // Filtros por categor√≠a
      filterButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const filter = btn.dataset.filter;
          currentFilter = filter;

          filterButtons.forEach((b) => {
            b.style.opacity = "0.6";
            b.classList.remove("border-zinc-900");
            b.classList.add("border-zinc-200");
            b.setAttribute("aria-pressed", "false");
          });

          btn.style.opacity = "1";
          btn.classList.remove("border-zinc-200");
          btn.classList.add("border-zinc-900");
          btn.setAttribute("aria-pressed", "true");

          localStorage.setItem("activeFilter", filter);
          updateProducts();
        });
      });

      // B√∫squeda
      searchInput.addEventListener("input", (e) => {
        currentSearch = e.target.value;
        updateProducts();
      });

      // Ordenamiento
      sortSelect.addEventListener("change", (e) => {
        currentSort = e.target.value;
        updateProducts();
      });

      // Aplicar filtro inicial
      const initialBtn = document.querySelector(`[data-filter="${savedFilter}"]`);
      if (initialBtn) {
        filterButtons.forEach((b) => {
          b.style.opacity = "0.6";
          b.classList.remove("border-zinc-900");
          b.classList.add("border-zinc-200");
          b.setAttribute("aria-pressed", "false");
        });
        initialBtn.style.opacity = "1";
        initialBtn.classList.remove("border-zinc-200");
        initialBtn.classList.add("border-zinc-900");
        initialBtn.setAttribute("aria-pressed", "true");
      }
      updateProducts();
    }
  </script>
</MainLayout>
