---
import MainLayout from "../../layouts/MainLayout.astro";

const cartItems = []; // por ahora vacío
---

<MainLayout title="Carrito | Demo e-commerce">
  <section class="min-h-[70vh] flex justify-end items-start">
    <div
      class="w-full max-w-md bg-white border border-zinc-200 shadow-xl rounded-none md:rounded-l-3xl p-6 md:p-8 space-y-6"
    >
      {/* Header del cart */}
      <div class="flex items-start justify-between gap-4">
        <div>
          <h1 class="text-lg md:text-xl font-semibold">Cart</h1>
          <p class="text-xs text-zinc-500 mt-1">
            ({cartItems.length} items)
          </p>
        </div>

        {/* “Cerrar” → seguir comprando */}
        <a
          href="/products"
          class="text-xs text-zinc-500 hover:text-zinc-800"
        >
          Seguir comprando ✕
        </a>
      </div>

      {/* Estado vacío del carrito */}
      {cartItems.length === 0 && (
        <div class="space-y-5">
          <p class="text-sm text-zinc-600">
            Tu carrito está actualmente vacío.
          </p>

          <div class="flex flex-col gap-2">
            <button
              class="w-full border border-zinc-900 rounded-full text-xs py-2 font-medium hover:bg-zinc-900 hover:text-white transition-colors"
            >
              ALL
            </button>
            <button
              class="w-full border border-zinc-300 rounded-full text-xs py-2 hover:border-pink-500 hover:text-pink-700 transition-colors"
            >
              WOMEN
            </button>
            <button
              class="w-full border border-zinc-300 rounded-full text-xs py-2 hover:border-pink-500 hover:text-pink-700 transition-colors"
            >
              YOUTH
            </button>
          </div>
        </div>
      )}
    </div>
  </section>
</MainLayout>
