</style>

<script>
    const faqButtons = document.querySelectorAll(".faq-btn");

    faqButtons.forEach(btn => {
        btn.addEventListener("click", () => {
            const content = btn.nextElementSibling as HTMLElement;
            const icon = btn.querySelector("span:last-child") as HTMLElement;

            content.classList.toggle("hidden");
            icon.textContent = content.classList.contains("hidden") ? "+" : "‚àí";
        });
    });

    //Boton para subir

    const btnUp = document.getElementById("btnUp");

    // Mostrar/ocultar bot√≥n al scrollear
    window.addEventListener("scroll", () => {
        if (window.scrollY > 300) {
        btnUp.classList.remove("opacity-0", "pointer-events-none");
        } else {
        btnUp.classList.add("opacity-0", "pointer-events-none");
        }
    });

    // Scroll suave hacia arriba
    btnUp.addEventListener("click", () => {
        window.scrollTo({ top: 0, behavior: "smooth" });
    });
</script>
