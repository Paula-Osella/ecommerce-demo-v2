            <div class="mt-6 space-y-2">
              <p class="text-xs font-medium text-zinc-700">Atenci√≥n al cliente</p>
              <p class="text-sm text-zinc-600">üìß hola@tutienda.com</p>
              <p class="text-sm text-zinc-600">üì± +54 9 11 1234-5678</p>
              <p class="text-xs text-zinc-500 mt-2">Lun-Vie: 9-18hs</p>
            </div>
          </div>
        </div>

        {/* ac√° seguir√≠a el bloque de badges + barra inferior, igual que ya lo ten√≠as */}
      </div>
    </footer>

    {/* CART COMO VENTANA LATERAL GRANDE */}
    <div
      id="cart-panel"
      class="fixed inset-0 bg-black/40 z-40 hidden items-stretch justify-end"
    >
      <div
        class="w-full max-w-lg bg-white border border-zinc-200 shadow-2xl h-full rounded-none md:rounded-l-3xl p-8 space-y-6"
      >
        {/* Header del cart */}
        <div class="flex items-start justify-between gap-4">
          <div>
            <h2 class="text-lg md:text-xl font-semibold">Cart</h2>
            <p class="text-xs text-zinc-500 mt-1">(0 items)</p>
          </div>

          <button
            type="button"
            id="close-cart"
            class="text-xs text-zinc-500 hover:text-zinc-800"
          >
            ‚úï
          </button>
        </div>

        {/* Estado vac√≠o del carrito */}
        <div class="space-y-5">
          <p class="text-sm text-zinc-600">
            Tu carrito est√° actualmente vac√≠o.
          </p>

          <div class="flex flex-col gap-2">
            <button
              class="w-full border border-zinc-900 rounded-full text-xs py-2 font-medium hover:bg-zinc-900 hover:text-white transition-colors"
            >
              ALL
            </button>
            <button
              class="w-full border border-zinc-300 rounded-full text-xs py-2 hover:border-pink-500 hover:text-pink-700 transition-colors"
            >
              WOMEN
            </button>
            <button
              class="w-full border border-zinc-300 rounded-full text-xs py-2 hover:border-pink-500 hover:text-pink-700 transition-colors"
            >
              YOUTH
            </button>
          </div>
        </div>
      </div>
    </div>

    <style>
      footer a {
        display: inline-block;
      }
    </style>

    <script>
      if (typeof window !== "undefined") {
        const openBtn = document.getElementById("open-cart");
        const panel = document.getElementById("cart-panel");
        const closeBtn = document.getElementById("close-cart");

        const openCart = () => {
          panel?.classList.remove("hidden");
          panel?.classList.add("flex");
        };

        const closeCart = () => {
          panel?.classList.add("hidden");
          panel?.classList.remove("flex");
        };

        openBtn?.addEventListener("click", openCart);
        closeBtn?.addEventListener("click", closeCart);

        // Cerrar haciendo click en el fondo oscuro
        panel?.addEventListener("click", (e) => {
          if (e.target === panel) {
            closeCart();
          }
        });
      }
    </script>
  </body>
</html>
